{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2016"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "node_modules",
    "src/**/*.spec.*"
  ]
}
